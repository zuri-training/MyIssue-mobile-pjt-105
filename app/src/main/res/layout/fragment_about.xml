<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AboutFragment">

    <ImageView
        android:id="@+id/aboutIv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back_icon"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/aboutCl"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/aboutCl"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/aboutTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/aboutTv2"/>

        <TextView
            android:id="@+id/aboutTv2"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:text="A master of IT and management professional training with 10+ years of experience in the area of Web Application Development and project management"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>



        <TextView
            android:id="@+id/aboutTv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interest"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="64dp"
            android:layout_marginLeft="24dp"
            app:layout_constraintTop_toBottomOf="@id/aboutTv2"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/aboutTv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Technology"
            android:textSize="24sp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/aboutTv3"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/aboutTv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Politics"
            android:textSize="24sp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/aboutTv4"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/aboutTv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Literature"
            android:textSize="24sp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/aboutTv5"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/aboutTv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Cooking"
            android:textSize="24sp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/aboutTv6"
            app:layout_constraintLeft_toLeftOf="parent"
            />












    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>