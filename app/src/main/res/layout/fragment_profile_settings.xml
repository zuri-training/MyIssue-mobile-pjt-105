<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back_icon"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/profileSettingsCL"/>





    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profileSettingsCL"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/profileIv1"/>

        <ImageView
            android:id="@+id/profileIv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_photo_icon"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/profileSettingsTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Susan John"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileIv1"/>

        <TextView
            android:id="@+id/profileSettingsTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Writer/Designer"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileSettingsTv1"/>

        <TextView
            android:id="@+id/profileSettingsTv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="susansword@gmail.com"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileSettingsTv2"/>



        <TextView
            android:id="@+id/profileSettingsTv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_semibold"
            android:drawableRight="@drawable/arrow_forward_icon"
            android:drawablePadding="220dp"
            android:layout_marginTop="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/settingsIv2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/settingsIv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:src="@drawable/profile_settings_post_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="380dp"/>




        <View
            android:id="@+id/barrier2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileSettingsTv4" />


        <TextView
            android:id="@+id/profileSettingsTv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:drawableRight="@drawable/arrow_forward_icon"
            android:drawablePadding="210dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="About"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/barrier2"
            app:layout_constraintLeft_toRightOf="@id/settingsIv3"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/settingsIv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:src="@drawable/profile_settings_about_icon"
            app:layout_constraintTop_toBottomOf="@id/barrier2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="24dp"/>


        <View
            android:id="@+id/barrier3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileSettingsTv5" />



        <TextView
            android:id="@+id/settingsTv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:drawableRight="@drawable/arrow_forward_icon"
            android:drawablePadding="185dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Services"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/barrier3"
            app:layout_constraintLeft_toRightOf="@id/settingsIv4"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/settingsIv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:src="@drawable/profile_settings_services_icon"
            app:layout_constraintTop_toBottomOf="@id/barrier3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>